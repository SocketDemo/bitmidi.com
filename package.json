{
  "name": "nodefoo.com",
  "description": "Node.js examples and code snippets",
  "version": "1.0.0",
  "author": {
    "name": "Feross Aboukhadijeh",
    "email": "feross@feross.org",
    "url": "https://feross.org"
  },
  "@std/esm": "cjs",
  "ava": {
    "require": [
      "@std/esm",
      "@babel/register"
    ],
    "babel": false,
    "compileEnhancements": false
  },
  "browser": {
    "./src/api/index.js": "./src/browser/api.mjs",
    "./secret/index.js": false,
    "url": false
  },
  "bugs": {
    "url": "https://github.com/feross/nodefoo.com/issues"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-beta.39",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.39",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.39",
    "@babel/plugin-transform-react-jsx": "^7.0.0-beta.39",
    "@babel/register": "^7.0.0-beta.39",
    "@std/esm": "0.19.4",
    "classnames": "^2.2.5",
    "clipboard-copy": "^1.4.1",
    "codemirror": "^5.34.0",
    "common-tags": "^1.4.0",
    "connect-sqlite3": "^0.9.9",
    "debug": "^3.0.0",
    "ejs": "^2.5.6",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "highlight.js": "^9.12.0",
    "hyphenate-style-name": "^1.0.2",
    "login-with-twitter": "^1.2.0",
    "markdown-it": "^8.3.2",
    "memo-async-lru": "^1.0.1",
    "mollusc": "^2.0.0",
    "opbeat": "^4.17.0",
    "path-to-regexp": "^2.1.0",
    "preact": "^8.2.1",
    "preact-context-provider": "^1.1.1",
    "preact-material-components": "^1.3.4",
    "run-parallel": "^1.1.6",
    "sqlite3": "^3.1.9",
    "tachyons": "^4.7.4",
    "throttleit": "^1.0.0",
    "twit": "^2.2.9",
    "undom": "^0.3.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.39",
    "ava": "^1.0.0-beta.1",
    "babel-eslint": "^8.0.1",
    "babel-minify": "^0.3.0",
    "git-pull-or-clone": "^1.1.0",
    "husky": "^0.14.3",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.14.12",
    "path-exists": "^3.0.0",
    "puppeteer": "^0.12.0",
    "purify-css": "^1.2.6",
    "rimraf": "^2.6.2",
    "rollup": "^0.55.3",
    "rollup-plugin-babel": "^4.0.0-beta.1",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "3.0.0",
    "standard": "*"
  },
  "homepage": "https://nodefoo.com",
  "license": "-",
  "main": "src/server/index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/feross/nodefoo.com.git"
  },
  "scripts": {
    "build": "npm run build-css && npm run build-js && chmod 777 db/",
    "build-css": "node ./bin/purify-css.js",
    "build-js": "rollup -c | minify > static/bundle.js",
    "generate": "DEBUG=* node ./bin/generate.js",
    "prepush": "npm test",
    "secret-download": "rsync -a -O -v --delete -e \"ssh -p 44444\" feross@future:\"/home/feross/www/nodefoo.com/secret/\" secret/",
    "secret-upload": "rsync -a -O -v --delete -e \"ssh -p 44444\" secret/ feross@future:\"/home/feross/www/nodefoo.com/secret/\"",
    "size": "npm run build-js && cat static/bundle.js | gzip | wc -c",
    "start": "node -r @std/esm src/server/start",
    "test": "npm run test-lint && npm run test-ava && npm run test-sonar",
    "test-ava": "npm run build && ava 'test/**/*.js'",
    "test-lint": "standard '**/*.js' '**/*.mjs'",
    "test-sonar": "npm run build && (npm start & (sleep 5 && sonar http://localhost:4000))",
    "watch": "npm run watch-css & npm run watch-js & npm run watch-server",
    "watch-css": "DEBUG=true nodemon -x 'npm run build-css' -w src/server -e css",
    "watch-js": "DEBUG=true rollup -c --watch",
    "watch-server": "DEBUG=nodefoo* DEBUG_DEPTH=1 nodemon -x 'node -r @std/esm' src/server/start -e js,json,ejs -i src/browser -i src/views -i static/ -i tmp/"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "/tmp/"
    ]
  }
}
